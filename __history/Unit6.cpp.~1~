#pragma package(smart_init)
#pragma resource "*.dfm"
TForm6 *Form6;

int i=1;
void zk(int i)
{

                Form6->Image1->Picture->LoadFromFile("image/"+IntToStr(i)+".bmp");
                Form6->Image2->Picture->LoadFromFile("image/"+IntToStr(i+1)+".bmp");
                Form6->Image3->Picture->LoadFromFile("image/"+IntToStr(i+2)+".bmp");
                Form6->Image4->Picture->LoadFromFile("image/"+IntToStr(i+3)+".bmp");
                Form6->Image5->Picture->LoadFromFile("image/"+IntToStr(i+4)+".bmp");

}

void lb(int i)
{
        if ( i==1 )
        {
                Form6->Label1->Caption="Bag   -    Портфель";
                Form6->Label2->Caption="Black   -   Чорний";
                Form6->Label3->Caption="Book   -   Книга";
                Form6->Label4->Caption="Boot   -   Ботинок";
                Form6->Label5->Caption="Box   -   Коробка";
        }
        else
        if ( i==2 )
        {
                Form6->Label1->Caption="Fox   -    Лис";
                Form6->Label2->Caption="Left   -   Вліворуч";
                Form6->Label3->Caption="Pen   -   Ручка";
                Form6->Label4->Caption="Pencil   -   Олівць";
                Form6->Label5->Caption="Clock - годинник";
        }
        else
        if ( i==3 )
        {
               Form6->Label1->Caption="Bus   -   Автобус";
               Form6->Label2->Caption="Flag   -    Прапор";
               Form6->Label3->Caption="Run   -   Бігти";
               Form6->Label4->Caption="Rat   -   Криса";
               Form6->Label5->Caption="Squirrel   -   Білка";

        }
         else
        if ( i==4 )
        {
               Form6->Label1->Caption="Window   -   Вікно";
               Form6->Label2->Caption="Rabbit   -    Кролик";
               Form6->Label3->Caption="Room   -   Кімната";
               Form6->Label4->Caption="Sit   -   Сидіти";
               Form6->Label5->Caption="Spoon   -   Ложка";

        }

}

void lb1(int i)
{
        if ( i==1 )
        {
                Form6->Label1->Caption="Clap   -    Оплески";
                Form6->Label2->Caption="Dance   -   Танець";
                Form6->Label3->Caption="Cup   -   Чашка";
                Form6->Label4->Caption="Desk   -   Стіл";
                Form6->Label5->Caption="Diary   -   Щоденник";
        }
        else
        if ( i==2 )
        {
                Form6->Label1->Caption="Dress   -    Сукня";
                Form6->Label2->Caption="Fat   -   Повний";
                Form6->Label3->Caption="Jam   -   Варення";
                Form6->Label4->Caption="Kitten - Кошеня";
                Form6->Label5->Caption="Mat   -   Килим";
        }
        else
        if ( i==3 )
        {
               Form6->Label1->Caption="Not   -    Ні";
               Form6->Label2->Caption="Red   -   Червоний";
               Form6->Label3->Caption="Shelf   -   Полиця";
               Form6->Label4->Caption="Shop   -   Магазин";
               Form6->Label5->Caption="Sing   -   Співати";

        }
         else
        if ( i==4 )
        {
               Form6->Label1->Caption="Six   -    Шість";
               Form6->Label2->Caption="Stick   -   Палиця";
               Form6->Label3->Caption="Text   -   Текст";
               Form6->Label4->Caption="We   -   Ми";
               Form6->Label5->Caption="Zoo   -   Зоопарк";

        }

}
